// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin Users
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          String    @default("admin") // admin, editor
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Products
model Product {
  id          String   @id @default(cuid())
  
  // Multi-language fields
  name        String   // Lao (default)
  nameTh      String?  // Thai
  nameEn      String?  // English
  nameZh      String?  // Chinese
  
  description String   // Lao (default)
  descriptionTh String?  // Thai
  descriptionEn String?  // English
  descriptionZh String?  // Chinese
  
  price       String?  // Optional price
  image       String
  features    String[] // Array of features (Lao)
  featuresTh  String[] @default([])
  featuresEn  String[] @default([])
  featuresZh  String[] @default([])
  
  benefits    String[] // Array of benefits (Lao)
  benefitsTh  String[] @default([])
  benefitsEn  String[] @default([])
  benefitsZh  String[] @default([])
  
  category    String   @default("ກັວຊາ")
  inStock     Boolean  @default(true)
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([inStock, order])
  @@index([featured])
  @@index([category])
}

// Blog Posts
model BlogPost {
  id          String   @id @default(cuid())
  
  // Multi-language fields
  title       String   // Lao (default)
  titleTh     String?  // Thai
  titleEn     String?  // English
  titleZh     String?  // Chinese
  
  slug        String   @unique
  
  excerpt     String   // Lao (default)
  excerptTh   String?  // Thai
  excerptEn   String?  // English
  excerptZh   String?  // Chinese
  
  content     String   @db.Text  // Lao (default)
  contentTh   String?  @db.Text  // Thai
  contentEn   String?  @db.Text  // English
  contentZh   String?  @db.Text  // Chinese
  
  image       String
  category    String   @default("ທົ່ວໄປ")
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  views       Int      @default(0)
  readTime    String   @default("5 ນາທີ")
  seoTitle    String?
  seoDescription String?
  seoKeywords String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?
  
  @@index([published, publishedAt])
  @@index([category])
  @@index([slug])
}

// FAQ
model FAQ {
  id        String   @id @default(cuid())
  
  // Multi-language fields
  question  String   // Lao (default)
  questionTh String? // Thai
  questionEn String? // English
  questionZh String? // Chinese
  
  answer    String   @db.Text  // Lao (default)
  answerTh  String?  @db.Text  // Thai
  answerEn  String?  @db.Text  // English
  answerZh  String?  @db.Text  // Chinese
  
  category  String   @default("ທົ່ວໄປ")
  order     Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([published, order])
  @@index([category])
}

// Site Settings
model SiteSettings {
  id              String   @id @default(cuid())
  siteName        String   @default("NAMNGAM")
  siteNameLao     String   @default("ນຳງາມ")
  siteDescription String   @default("ກັວຊາ ສຸຂະພາບແລະຄວາມງາມ")
  logo            String?
  favicon         String?
  
  // Contact Info
  email           String   @default("Namngambrand@gmail.com")
  phone           String   @default("+856 20 55 485 622")
  whatsapp        String   @default("+856 20 55 485 622")
  facebook        String   @default("https://www.facebook.com/profile.php?id=61576657104465")
  
  // SEO
  seoTitle        String?
  seoDescription  String?
  seoKeywords     String[]
  
  // Analytics
  googleAnalyticsId String?
  facebookPixelId   String?
  
  updatedAt       DateTime @updatedAt
}

// Newsletter Subscribers
model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  status    String   @default("active") // active, unsubscribed
  source    String   @default("website")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([status])
  @@index([createdAt])
}

// About Section
model AboutSection {
  id              String   @id @default(cuid())
  title           String
  titleEn         String?
  description     String   @db.Text
  image           String?
  backgroundType  String   @default("image") // image, gradient, solid
  backgroundImage String?
  backgroundColor String?  @default("#fdf2f8") // For solid/gradient
  videoUrl        String?
  published       Boolean  @default(true)
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([published, order])
}

// Benefit Items
model BenefitItem {
  id          String   @id @default(cuid())
  title       String
  titleEn     String?
  description String   @db.Text
  icon        String?
  image       String?
  published   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([published, order])
}

// Section Backgrounds (for Benefits, FAQ, etc.)
model SectionBackground {
  id              String   @id @default(cuid())
  sectionName     String   @unique // benefits, faq, products, blog
  backgroundType  String   @default("gradient") // image, gradient, solid
  backgroundImage String?
  backgroundColor String?  @default("from-pink-50 via-white to-rococo-50") // Tailwind class or hex
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Hero Section
model HeroSection {
  id              String   @id @default(cuid())
  title           String
  subtitle        String?
  description     String?  @db.Text
  ctaText         String?
  ctaLink         String?
  backgroundImage String?
  logoWatermark   Boolean  @default(true)
  published       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
